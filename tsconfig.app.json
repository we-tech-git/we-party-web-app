{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*.vue", "src/**/*.ts"],
  "exclude": ["src/**/__tests__/*", "src/pages/private/feed.vue", "src/pages/private/event/[id].vue", "src/pages/private/event/[id].vue"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
